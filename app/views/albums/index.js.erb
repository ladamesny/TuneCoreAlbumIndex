<% @albums.each do |album| %>
  $('#albums-list').append('<%= j render partial: "albums/album", locals: { album: album } %>')
<% end %>

<% if @albums.last_page? %>
  $(window).off('scroll');
  $('.loading-pagination').remove();
  $('.pagination').remove();
<% else %>
  $('.pagination').html('<%= j paginate @albums %>')
<% end %>
